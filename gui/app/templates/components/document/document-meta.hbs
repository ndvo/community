<div class="document-meta non-printable">
	<div class="document-status">
		<div class="title">SITUAÇÃO</div>
		<div class="lifecyle {{if (eq document.lifecycle constants.Lifecycle.Draft) "label-draft"}}
			{{if (eq document.lifecycle constants.Lifecycle.Live) "label-live"}}
			{{if (eq document.lifecycle constants.Lifecycle.Archived) "label-archived"}}">
			{{document.lifecycleLabel}}
			{{#attach-tooltip showDelay=1000}}Ciclo de vida: Rascunho &middot; Produção &middot; Arquivado{{/attach-tooltip}}
		</div>

		{{#if (eq document.protection constants.ProtectionType.None)}}
			<div class="label-open">
				OPEN
				{{#attach-tooltip showDelay=1000}}Controle de mudança: Aberto &middot; Protegido &middot; Trancado{{/attach-tooltip}}
			</div>
		{{/if}}
		{{#if (eq document.protection constants.ProtectionType.Review)}}
			<div class="label-protected">
				PROTEGIDO
				{{#attach-tooltip showDelay=1000}}Controle de mudança: Aberto &middot; Protegido &middot; Trancado{{/attach-tooltip}}
			</div>
		{{/if}}
		{{#if (eq document.protection constants.ProtectionType.Lock)}}
			<div class="label-locked">
				TRANCADO
				{{#attach-tooltip showDelay=1000}}Controle de mudança: Aberto &middot; Protegido &middot; Trancado{{/attach-tooltip}}
			</div>
		{{/if}}
	</div>

	{{#if contributionStatus}}
		<div class="label-workflow-status">
			{{contributionStatus}}
		</div>
	{{else}}
		{{#if approvalStatus}}
			<div class="label-workflow-status">
				{{approvalStatus}}
			</div>
		{{/if}}
	{{/if}}

	{{#if document.template}}
			<div class="label-template non-printable">
			Modelo
			{{#attach-tooltip showDelay=1000}}Este é um modelo{{/attach-tooltip}}
		</div>
	{{/if}}

	<Ui::UiSpacer @size="200" />

	<div class="title">Palavra-chave</div>
	{{#each selectedCategories as |cat|}}
		<div class="meta-label">
			<i class="dicon {{constants.Icon.Category}}"/>
			{{cat.category}}
			{{#attach-tooltip showDelay=1000}}Palagra-chave{{/attach-tooltip}}
		</div>
	{{/each}}
	{{#each tagz as |t|}}
		<div class="meta-label">
			<i class="dicon {{constants.Icon.Tag}}"/>
			{{t}}
			{{#attach-tooltip showDelay=1000}}Palagra-chave{{/attach-tooltip}}
		</div>
	{{/each}}
	{{#if unassigned}}
		{{#if permissions.spaceManage}}
			<div class="empty cursor-pointer" {{action "onEditCategory"}}>Não atribuído</div>
		{{else}}
			<div class="empty">Não atribuído</div>
		{{/if}}
	{{/if}}
</div>

{{document/sidebar-attachment document=document permissions=permissions}}

<Ui::UiSpacer @size="200" />
