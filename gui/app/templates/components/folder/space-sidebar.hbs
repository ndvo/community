<div class="sidebar-content">
	<div class="section">
		<div class="title">filter</div>
		<div class="list">
			<div class="item {{if (eq selectedFilter "space") "selected"}}" {{action "onDocumentFilter" "space" space.id}}>
				<i class={{concat "dicon " constants.Icon.Filter}} />
				<div class="name">Todos ({{documents.length}})</div>
			</div>
			{{#if hasCategories}}
				{{#if (gt rootDocCount 0)}}
					<div class="item {{if (eq selectedFilter "uncategorized") "selected"}}" {{action "onDocumentFilter" "uncategorized" space.id}}>
						<i class={{concat "dicon " constants.Icon.Filter}} />
						<div class="name">Não categorizados ({{rootDocCount}})</div>
					</div>
				{{/if}}
			{{/if}}
			{{#if permissions.documentTemplate}}
				<div class="item {{if (eq selectedFilter "template") "selected"}}" {{action "onDocumentFilter" "template" space.id}}>
					<i class={{concat "dicon " constants.Icon.Filter}} />
					<div class="name">Modelos ({{templates.length}})</div>
				</div>
			{{/if}}
			{{#if permissions.documentLifecycle}}
				<div class="lifecycle item {{if (eq selectedFilter "draft") "selected"}}" {{action "onDocumentFilter" "draft" space.id}}>
					<i class={{concat "dicon " constants.Icon.Filter}} />
					<div class="name">Rascunhos ({{documentsDraft.length}})</div>
				</div>
				<div class="lifecycle item {{if (eq selectedFilter "live") "selected"}}" {{action "onDocumentFilter" "live" space.id}}>
					<i class={{concat "dicon " constants.Icon.Filter}} />
					<div class="name">Produção ({{documentsLive.length}})</div>
				</div>
			{{/if}}
			<div class="item {{if (eq selectedFilter "add") "selected"}}" {{action "onDocumentFilter" "add" space.id}}>
				<i class={{concat "dicon " constants.Icon.Filter}} />
				<div class="name">Adicionados recentemente ({{recentAdd.length}})</div>
			</div>
			<div class="item {{if (eq selectedFilter "update") "selected"}}" {{action "onDocumentFilter" "update" space.id}}>
				<i class={{concat "dicon " constants.Icon.Filter}} />
				<div class="name">Atualizados recentemente ({{recentUpdate.length}})</div>
			</div>
		</div>
	</div>

	<Ui::UiSpacer @size="200" />

	<div class="section">
		<div class="title">Palavra-chave</div>
		<div class="list">
			{{#if categories}}
				{{#each categories as |cat|}}
					<div class="item {{if cat.selected "selected"}}" {{action "onDocumentFilter" "category" cat.id}}>
						<i class={{concat "dicon " constants.Icon.Category}} />
						<div class="name">{{cat.category}} ({{cat.docCount}})</div>
					</div>
				{{/each}}
			{{else}}
			{{/if}}
		</div>
	</div>
</div>
