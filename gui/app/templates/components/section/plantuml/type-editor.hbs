{{layout/logo-heading
	title="PlantUML"
	desc="Crie diagramas UML a partir de uma linguagem em texto puro (http://plantuml.com)"
	icon=constants.Icon.Integrations}}

{{#section/base-editor document=document folder=folder page=page busy=waiting
	isDirty=(action "isDirty") onCancel=(action "onCancel") onAction=(action "onAction")}}

	<div class="section-plantuml-diagram">
		<div class="form-group">
			<label><a href="http://plantuml.com/" target="_blank">Diagrama PlantUML</a></label>
			<Ui::UiSpacer @size="200" />
			<div>
				<p>Inserir diagramas de exemplo:</p>
				<p>
					{{ui/ui-button color=constants.Color.Gray light=true label="SequÃªncia" onClick=(action "onInsertSequence")}}
					{{ui/ui-button color=constants.Color.Gray light=true label="Caso de uso" onClick=(action "onInsertUseCase")}}
					{{ui/ui-button color=constants.Color.Gray light=true label="Classe" onClick=(action "onInsertClass")}}
					{{ui/ui-button color=constants.Color.Gray light=true label="Atividade" onClick=(action "onInsertActivity")}}
					{{ui/ui-button color=constants.Color.Gray light=true label="Atividade (nova sintaxe)" onClick=(action "onInsertActivityNew")}}
					{{ui/ui-button color=constants.Color.Gray light=true label="Componente" onClick=(action "onInsertComponent")}}
					{{ui/ui-button color=constants.Color.Gray light=true label="Estado" onClick=(action "onInsertState")}}
				</p>
			</div>
			{{focus-textarea value=diagramText rows=30 id=editorId class="diagram-editor form-control mousetrap"}}
		</div>
	</div>

	<Ui::UiSpacer @size="200" />

	{{ui/ui-button color=constants.Color.Yellow light=true label=previewButtonCaption onClick=(action "onPreview")}}

	<Ui::UiSpacer @size="200" />

	<div id={{previewId}} class="text-center">
		<img src={{diagramPreview}}>
	</div>

	<Ui::UiSpacer @size="200" />

{{/section/base-editor}}
